<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_myorder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y29"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我的订单"
                android:textColor="@color/text333"
                android:textSize="@dimen/x13" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x5"
                android:gravity="center_vertical"
                android:text="查看全部"
                android:textColor="@color/text666"
                android:textSize="@dimen/x12" />

            <ImageView
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/y8"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/jiantou" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/bgddd"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:paddingTop="@dimen/x10"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/ll_daifukuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/daifukuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x5"
                    android:text="待付款"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_daifahuo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/daifahuo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x5"
                    android:text="待发货"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_daishouhuo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/daishouhuo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x5"
                    android:text="待收货"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yiwancheng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/daipingjia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x5"
                    android:text="已完成"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_yiguoqi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/yiguoqi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x5"
                    android:text="已过期"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x7"
            android:background="@color/bgddd"></View>

        <LinearLayout
            android:id="@+id/ll_TGM"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y39"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我的推广码"
                android:textColor="@color/text444" />

            <ImageView
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/y8"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/jiantou" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/bgddd"></View>

        <LinearLayout
            android:id="@+id/ll_BZ"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y39"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="帮助中心"
                android:textColor="@color/text444" />

            <ImageView
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/y8"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/jiantou" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/bgddd"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:gravity="center"
            android:text="乐拍缘版本号：1.21.1"
            android:textColor="@color/text999"
            android:textSize="@dimen/x13" />
    </LinearLayout>

</LinearLayout>
