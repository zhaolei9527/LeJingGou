<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgea"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x37"
        android:background="@color/bgfff"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@mipmap/close" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="充值中心"
            android:textColor="@color/text333"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_mingxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:text="明细"
            android:textColor="@color/text333"
            android:textSize="@dimen/x13" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/bgea"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/bgfff">

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x13"
            android:gravity="center"
            android:textColor="@color/text333" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y5"
        android:background="@color/bgea"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgfff"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:text="提现金额"
            android:textColor="@color/text333" />

        <EditText
            android:id="@+id/et_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:background="@color/bgea"
            android:hint="请输入提现金额"
            android:inputType="numberDecimal"
            android:padding="@dimen/x5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginTop="@dimen/x14"
            android:layout_marginBottom="@dimen/x14"
            android:background="@color/bgea"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginBottom="@dimen/x14"
            android:text="付款方式"
            android:textColor="@color/text333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/bgea"></View>

        <RelativeLayout
            android:id="@+id/ll_WX"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30">

            <ImageView
                android:id="@+id/img_weixin"
                android:layout_width="@dimen/x21"
                android:layout_height="@dimen/x21"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:background="@mipmap/weiixn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/img_weixin"
                android:text="微信" />

            <CheckBox
                android:id="@+id/Choosedweixin"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/rb_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_ZFB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30">

            <ImageView
                android:id="@+id/img_zhifubao"
                android:layout_width="@dimen/x21"
                android:layout_height="@dimen/x21"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:background="@mipmap/zhifubao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/img_zhifubao"
                android:text="支付宝" />

            <CheckBox
                android:id="@+id/Choosedzhifubao"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/rb_selector"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:focusable="false"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/x262"
        android:layout_height="@dimen/y33"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x15"
        android:background="@mipmap/btn_login"
        android:text="确认支付"
        android:textAllCaps="false"
        android:textColor="@color/bgfff"
        android:textSize="@dimen/x15"
        android:visibility="visible" />

</LinearLayout>
