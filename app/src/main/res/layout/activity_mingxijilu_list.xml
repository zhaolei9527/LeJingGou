<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x37"
                android:background="@color/bgfff"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/rl_back"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@mipmap/close" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="明细"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x16" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/bgddd"></View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_margin="@dimen/x10"
            android:background="@mipmap/mingxi_border"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_TX"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/mingxi_bg"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_CZ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="充值"
                android:textColor="#ef1544"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_YJ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="佣金"
                android:textColor="#ef1544"
                android:textSize="@dimen/x14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/bgea"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <sakura.com.lejinggou.View.WenguoyiRecycleView
                android:id="@+id/rv_txjl_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"></sakura.com.lejinggou.View.WenguoyiRecycleView>

            <sakura.com.lejinggou.View.WenguoyiRecycleView
                android:id="@+id/rv_czjl_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"></sakura.com.lejinggou.View.WenguoyiRecycleView>

            <sakura.com.lejinggou.View.WenguoyiRecycleView
                android:id="@+id/rv_yjjl_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"></sakura.com.lejinggou.View.WenguoyiRecycleView>

            <include layout="@layout/layout_empty"></include>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
