<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_good_bg"
        android:orientation="vertical"
        android:padding="@dimen/x5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/SimpleDraweeView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y131"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundedCornerRadius="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@mipmap/time_bg"
                android:gravity="center"
                android:padding="@dimen/x2"
                android:text="距结束：12:20:30"
                android:textColor="@color/white"
                android:textSize="@dimen/x10" />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/x5"
            android:textColor="@color/text333"
            android:textSize="@dimen/x13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="@dimen/x5"
                android:textColor="@color/textred"
                android:textSize="@dimen/x13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y15"
                android:background="@mipmap/dangqianjia_bg"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/x2"
                android:paddingRight="@dimen/x2"
                android:text="当前价"
                android:textColor="@color/textred"
                android:textSize="@dimen/x11" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_GYS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:background="@mipmap/gongyingshang_border"
            android:maxLines="1"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:textColor="@color/text999"
            android:textSize="@dimen/x11" />

    </LinearLayout>

</LinearLayout>
