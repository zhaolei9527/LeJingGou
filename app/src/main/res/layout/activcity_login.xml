<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x37"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/close" />

            </FrameLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/bgddd"></View>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/dlbg">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y15"
            android:src="@mipmap/logo" />

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y15"
            android:layout_marginRight="@dimen/x20"
            android:orientation="vertical">

            <EditText
                android:text=""
                android:maxLines="1"
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请输入手机号"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/text333"
                android:textColorHint="@color/text999" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:orientation="vertical">

            <EditText
                android:text=""
                android:maxLines="1"
                android:id="@+id/et_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/text333"
                android:textColorHint="@color/text999" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y37"
            android:layout_below="@id/rl2"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center_vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_alignParentBottom="true"
                android:background="@color/bgddd"></View>

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"
                android:textColor="@color/text333"
                android:textColorHint="@color/text999" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/x85"
                android:layout_height="@dimen/y30"
                android:layout_toLeftOf="@id/ll_change" />

            <LinearLayout
                android:id="@+id/ll_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_changecode"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@mipmap/shuaxin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x2"
                    android:text="刷新"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="@dimen/x264"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x10">

            <TextView
                android:id="@+id/tv_forgetpassworld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码"
                android:textColor="@color/text666" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/x262"
            android:layout_height="@dimen/y33"
            android:layout_below="@id/rl3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y15"
            android:background="@mipmap/btn_login"
            android:text="登录"
            android:textAllCaps="false"
            android:textColor="@color/bgfff"
            android:textSize="@dimen/x15"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="@dimen/x262"
            android:layout_height="@dimen/y33"
            android:layout_below="@id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y15"
            android:background="@mipmap/denglu_button"
            android:text="注册"
            android:textAllCaps="false"
            android:textColor="@color/bgtitle"
            android:textSize="@dimen/x15"
            android:visibility="visible" />

    </RelativeLayout>


</LinearLayout>
