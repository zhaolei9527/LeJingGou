<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgea"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/bgfff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x37"
                android:background="@color/bgfff"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/rl_back"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@mipmap/close" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="设置"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_GRZL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="个人资料"
                        android:textColor="@color/text444" />

                    <ImageView
                        android:layout_width="@dimen/x5"
                        android:layout_height="@dimen/y8"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@mipmap/jiantou" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x3"
                    android:background="@color/bgddd"></View>

                <LinearLayout
                    android:id="@+id/ll_SMRZ"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:gravity="center_vertical"
                        android:text="实名认证"
                        android:textColor="@color/text444" />


                    <TextView
                        android:id="@+id/tv_sm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/text444" />


                    <ImageView
                        android:layout_width="@dimen/x5"
                        android:layout_height="@dimen/y8"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@mipmap/jiantou" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/bgddd"></View>

                <LinearLayout
                    android:id="@+id/ll_ZFB"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:gravity="center_vertical"
                        android:text="支付宝绑定"
                        android:textColor="@color/text444" />

                    <TextView
                        android:id="@+id/tv_zfb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/text444" />

                    <ImageView
                        android:layout_width="@dimen/x5"
                        android:layout_height="@dimen/y8"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@mipmap/jiantou" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/bgddd"></View>

                <LinearLayout
                    android:id="@+id/ll_ChangePwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="密码修改"
                        android:textColor="@color/text444" />

                    <ImageView
                        android:layout_width="@dimen/x5"
                        android:layout_height="@dimen/y8"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@mipmap/jiantou" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x3"
                    android:background="@color/bgddd"></View>

                <LinearLayout
                    android:id="@+id/ll_ChangeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="收货地址"
                        android:textColor="@color/text444" />

                    <ImageView
                        android:layout_width="@dimen/x5"
                        android:layout_height="@dimen/y8"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@mipmap/jiantou" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/bgddd"></View>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/y30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y280"
        android:background="@mipmap/btn_login"
        android:text="退出登录"
        android:textColor="@color/bgfff"
        android:textSize="@dimen/x13" />

</RelativeLayout>
